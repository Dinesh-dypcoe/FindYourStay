<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Responsive Navbar</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        /* General Styles */
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
        }

        .navbar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 1rem;
            background-color: #fff;
            border-bottom: 1px solid #ddd;
            position: sticky;
            top: 0;
            z-index: 1000;
        }

        .navbar .search-container {
            display: flex;
            justify-content: center;
            align-items: center;
            flex-grow: 1;
            max-width: 600px;
            margin: 0 auto;
        }

        .search-input {
            flex: 1;
            padding: 0.5rem;
            font-size: 1rem;
            border-radius: 25px;
            border: 1px solid #ddd;
            margin-right: 0.5rem;
            transition: box-shadow 0.3s;
        }

        .search-input:focus {
            outline: none;
            box-shadow: 0 0 5px #fe424d;
        }

        .search-btn {
            margin-right: 0.3rem;
            background-color: #fe424d;
            color: #fff;
            border-radius: 25px;
            padding: 0.5rem 1rem;
            font-size: 1rem;
            border: none;
            cursor: pointer;
            transition: background-color 0.3s ease, transform 0.2s ease;
        }

        .search-btn:hover {
            background-color: #e23b43;
            transform: scale(1.05);
        }

        .listAtFindYourStay {
            font-size: 1rem;
            margin-left: 1rem;
        }

        .listAtFindYourStay a {
            text-decoration: none;
            color: #fe424d;
        }

        .listAtFindYourStay a:hover {
            text-decoration: none;
        }

        .listoption{
            margin-right: 1rem;
        }

        .account-menu button {
            background-color: #fe424d;
            color: #fff;
            border: none;
            padding: 0.6rem 1rem;
            border-radius: 25px;
            font-size: 1rem;
            cursor: pointer;
            transition: background-color 0.3s ease, transform 0.2s ease;
        }

        .account-menu button:hover {
            background-color: #e23b43;
            transform: scale(1.05);
        }
        
        @media (min-width: 992px) {
            .search-input {
                min-width: 300px; /* Ensures enough space for the placeholder text */
                font-size: 1rem; /* Reset font size for larger screens */
            }
        }

        /* Responsive Design */
        @media (max-width: 992px) {
            .listAtFindYourStay {
                display: none;
            }

            .search-input {
                font-size: 0.9rem;
                padding: 0.4rem;
            }

            .search-btn {
                font-size: 0.9rem;
                padding: 0.4rem 0.8rem;
            }
        }

        @media (max-width: 450px) {
            .navbar {
                flex-wrap: wrap;
                padding: 0.5rem;
            }

            .search-container {
                flex-grow: 1;
                margin: 0;
            }

            .search-input {
                font-size: 0.8rem;
                padding: 0.3rem;
            }

            .search-btn {
                font-size: 0.8rem;
                padding: 0.3rem 0.6rem;
            }

            .account-menu button {
                padding: 0.4rem 0.6rem;
                font-size: 0.8rem;
            }
        }
        /* Adjusted Responsive Design */
        @media (max-width: 370px) {
            .navbar {
                flex-wrap: nowrap; /* Prevent wrapping */
                padding: 0.3rem; /* Reduce padding */
            }

            .search-container {
                flex-grow: 1; /* Allow flexible resizing */
                max-width: 100%; /* Use available space */
                margin: 0;
            }

            .search-input {
                font-size: 0.7rem; /* Smaller font size */
                padding: 0.2rem; /* Reduced padding */
                flex-shrink: 1; /* Allow the input to shrink */
                max-width: 70%; /* Adjust max width for smaller screens */
            }

            .search-btn {
                margin-right: 0.3rem;
                font-size: 0.7rem; /* Smaller button text */
                padding: 0.2rem 0.5rem; /* Reduced button size */
                flex-shrink: 1; /* Allow button to shrink */
            }

            .account-menu button {
                padding: 0.3rem 0.5rem; /* Reduced padding */
                font-size: 0.7rem; /* Smaller font size */
                flex-shrink: 1; /* Allow button to shrink */
            }

            .listAtFindYourStay {
                display: none; /* Hide extra elements for smaller screens */
            }

            .listoption {
                margin-right: 0.5rem; /* Reduced margin */
                font-size: 0.7rem; /* Smaller text */
            }
        }


        /* Sidebar styling */
        .sidebar {
            margin-top: 1rem;
            position: fixed;
            top: 0;
            right: -250px;
            width: 250px;
            height: auto;
            background-color: #fff;
            box-shadow: -2px 0 5px rgba(0, 0, 0, 0.5);
            transition: right 0.3s ease;
            z-index: 2000;
        }

        .sidebar.open {
            right: 0;
        }

        .sidebar-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 1rem;
            background-color: #fe424d;
            color: #fff;
        }

        .sidebar-header {
            display: flex;
            justify-content: center; /* Center content horizontally */
            align-items: center;
            padding: 1rem;
            background-color: #fe424d;
            color: #fff;
            position: relative;
        }
        .sidebar-header .close-btn {
            position: absolute; /* Place the close button at the top-right */
            right: 1rem;
            background: none;
            border: none;
            color: white;
            font-size: 1.5rem;
            cursor: pointer;
        }

        .sidebar-content {
            padding: 1rem;
        }

        .sidebar-content a {
            display: flex;
            justify-content: center;
            align-items: center;
            text-decoration: none;
            color: #333;
        }

        .sidebar-content a:hover {
            background-color: #f8f9fa;
            border-radius: 5px;
        }
    </style>
</head>
<body>

<nav class="navbar">
    <a class="navbar-brand" href="/listings"><i class="fa-solid fa-house-crack"></i></a>
    <div class="search-container">
        <form class="d-flex" role="search" action="/listings/search" method="GET">
            <input class="search-input" type="search" placeholder="Search by Country or Title" name="query">
            <button class="search-btn" type="submit">
                <i class="fa-solid fa-magnifying-glass"></i> Search
            </button>
        </form>
    </div>
    <div class="navbar-nav listAtFindYourStay listoption">
        <a href="/listings/new">List at FindYourStay</a>
    </div>
    <div class="account-menu">
        <button id="accountMenuButton">
            <i class="fa-solid fa-user"></i>
        </button>
    </div>
</nav>

<div class="sidebar" id="accountSidebar">
    <div class="sidebar-header">
        <span>Menu</span>
        <button class="close-btn" id="closeSidebar">&times;</button>
    </div>
    <div class="sidebar-content">
        <% if (!currUser) { %>
            <b><a href="/signup">Sign Up</a></b>
            <b><a href="/login">Log In</a></b>
        <% } else { %>
            <b><a href="/profile"><i class="fa-solid fa-user"></i>My Profile</a></b>
            <b><a href="/my-properties">My Hostings</a></b>
        <% } %>
        <div class="navbar-nav ms-auto">
            <b><a class="nav-link" href="/listings/new">List at FindYourStay</a></b>
        </div>
        <b><a href="/contact">Contact Us</a></b>
        <% if(currUser){%>
            <b><a href="/logout">Log Out</a></b>
        <%}%>
    </div>
</div>

<script>
    // Sidebar toggle functionality
    const accountMenuButton = document.getElementById('accountMenuButton');
    const accountSidebar = document.getElementById('accountSidebar');
    const closeSidebar = document.getElementById('closeSidebar');

    accountMenuButton.addEventListener('click', () => {
        accountSidebar.classList.toggle('open');
    });

    closeSidebar.addEventListener('click', () => {
        accountSidebar.classList.remove('open');
    });
</script>

</body>
</html>
