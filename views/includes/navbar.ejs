<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Responsive Navbar</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        /* General Styles */
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
        }

        .navbar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 1rem;
            width: 100%;
        }

        .navbar .search-container {
            display: flex;
            justify-content: center;
            align-items: center;
            flex-grow: 1;
            max-width: 600px; /* Max width for larger screens */
            margin: 0 auto;
        }

        .search-input {
            flex: 1;
            padding: 0.5rem;
            font-size: 1rem;
            border-radius: 25px;
            margin-right: 0.5rem;
            min-width: 100px; /* Minimum width for very small screens */
            text-align: center;
        }

        .search-btn {
            background-color: #fe424d;
            color: #fff;
            border-radius: 25px;
            padding: 0.5rem 1rem;
            font-size: 1rem;
            white-space: nowrap;
        }

        .search-btn:hover {
            opacity: 0.8;
            background-color: #fe424d;
            color: #fff;
            cursor: pointer;
        }

        /* Hide "List at FindYourStay" on smaller screens */
        @media (max-width: 992px) {
            .listAtFindYourStay {
                display: none;
            }

            .search-input {
                padding: 0.4rem; /* Adjust padding for smaller screens */
                font-size: 0.9rem; /* Slightly smaller font size */
                text-align: center;
            }

            .search-btn {
                padding: 0.4rem 0.8rem; /* Adjust button padding for smaller screens */
                font-size: 0.9rem; /* Slightly smaller font size */
            }
        }

        @media (max-width: 450px) {
            .navbar {
                padding: 0.5rem; /* Reduce padding */
                flex-wrap: wrap; /* Allow wrapping of elements */
            }

            /* Adjust search container to fit on smaller screens */
            .search-container {
                flex-grow: 1;
                margin: 0;
            }

            /* Make search input and button smaller */
            .search-input {
                font-size: 0.8rem;
                padding: 0.3rem;
            }

            .search-btn {
                font-size: 0.8rem;
                padding: 0.3rem 0.6rem;
            }

            /* Hide 'List at FindYourStay' for very small screens */
            .listAtFindYourStay {
                display: none;
            }

            /* Reduce the size of the account menu button */
            .account-menu button {
                padding: 0.3rem 0.5rem;
            }
        }
        
        /* Center search bar with a slight right shift on larger screens */
        @media (min-width: 992px) {
            .search-container {
                margin-left: 25% !important; /* Adjust this value to push the search bar more to the right */
            }
        }

        /* Sidebar styling */
        .sidebar {
            position: fixed;
            top: 0;
            right: -250px; /* Initially off-screen */
            width: 250px; /* Sidebar width */
            height: auto;
            background-color: white;
            box-shadow: -2px 0 5px rgba(0, 0, 0, 0.5);
            transition: right 0.3s ease;
            z-index: 1000;
        }

        /* Sidebar when open */
        .sidebar.open {
            right: 0;
        }

        .sidebar-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 1rem;
            background-color: #fe424d;
            color: #fff;
        }

        .sidebar-header .close-btn {
            background: none;
            border: none;
            color: white;
            font-size: 1.5rem;
            cursor: pointer;
        }

        .sidebar-content {
            padding: 1rem;
        }

        .sidebar-content a {
            display: flex;
            justify-content: center;
            align-items: center;
            text-decoration: none;
            color: #333;
        }

        .sidebar-content a:hover {
            background-color: #f8f9fa;
        }
    </style>
</head>
<body>

<nav class="navbar navbar-expand-lg bg-body-light border-bottom sticky-top">
    <div class="container-fluid">
        <a class="navbar-brand" href="/listings"><i class="fa-solid fa-house-crack"></i></a>

        <div class="search-container">
            <form class="d-flex" role="search" action="/listings/search" method="GET" style="display: flex; width: 100%;">
                <input class="form-control me-2 search-input" type="search" placeholder="Search by Country or Title" name="query">
                <button class="btn search-btn" type="submit">
                    <i class="fa-solid fa-magnifying-glass"></i> Search
                </button>
            </form>
        </div>

        <div class="navbar-nav ms-auto listAtFindYourStay">
            <a class="nav-link" href="/listings/new">List at FindYourStay</a>
        </div>

        <!-- Account menu button -->
        <div class="account-menu">
            <button class="btn btn-secondary" id="accountMenuButton">
                <i class="fa-solid fa-user"></i>
            </button>
        </div>
    </div>
</nav>

<!-- Sidebar structure -->
<div class="sidebar" id="accountSidebar">
    <div class="sidebar-header">
        <span>Account Menu</span>
        <button class="close-btn" id="closeSidebar">&times;</button>
    </div>
    <div class="sidebar-content">
        
        <% if (!currUser) { %>
            <b><a href="/signup">Sign Up</a></b>
            <b><a href="/login">Log In</a></b>
        <% } else { %>
            <b><a href="/profile"><i class="fa-solid fa-user"></i>My Profile</a></b>
            <b><a href="/my-properties">My Hostings</a></b>
        <% } %>
        <div class="navbar-nav ms-auto">
            <b><a class="nav-link" href="/listings/new">List at FindYourStay</a></b>
        </div>
        <b><a href="/contact">Contact Us</a></b>
        <% if(currUser){%>
            <b><a href="/logout">Log Out</a></b>
        <%}%>
    </div>
</div>

<script>
    // Sidebar toggle functionality
    const accountMenuButton = document.getElementById('accountMenuButton');
    const accountSidebar = document.getElementById('accountSidebar');
    const closeSidebar = document.getElementById('closeSidebar');

    accountMenuButton.addEventListener('click', function() {
        accountSidebar.classList.toggle('open'); // Show the sidebar
    });

    closeSidebar.addEventListener('click', function() {
        accountSidebar.classList.remove('open'); // Close the sidebar
    });
</script>
</body>
</html>
