<% layout("/layouts/boilerplate") %>

<style>
    /* Reset any conflicting styles */
    .ai-search-container * {
        box-sizing: border-box;
    }
    
    .ai-search-container {
        max-width: 800px;
        margin: 2rem auto;
        padding: 2rem;
        background: #ffffff;
        border-radius: 15px;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
        position: relative;
        z-index: 1;
    }

    .ai-search-header {
        text-align: center;
        margin-bottom: 2rem;
    }

    .ai-search-header h1 {
        color: #4c5fd7;
        font-size: 2.5rem;
        margin-bottom: 1rem;
        font-weight: 700;
    }

    .ai-search-header p {
        color: #666;
        font-size: 1.1rem;
        line-height: 1.6;
    }

    .ai-icon {
        font-size: 3rem;
        color: #4c5fd7;
        margin-bottom: 1rem;
    }

    .search-form {
        margin-top: 2rem;
    }

    .form-group {
        margin-bottom: 1.5rem;
    }

    .form-label {
        display: block;
        font-weight: 600;
        color: #333;
        margin-bottom: 0.5rem;
        font-size: 1.1rem;
    }

    .form-control {
        width: 100%;
        padding: 0.5rem;
        border: 1px solid #ddd;
        border-radius: 25px;
        font-size: 1rem;
        transition: box-shadow 0.3s;
        resize: vertical;
        min-height: 120px;
        font-family: inherit;
        line-height: 1.5;
    }

    .form-control:focus {
        outline: none;
        box-shadow: 0 0 5px #fe424d;
        border-color: #fe424d;
    }

    .aisearch{
        align-items: center;
    }

    .searchdiv {
        text-align: center;
        margin-top: 1rem;
    }

    .ai-search-btn {
        width: 100%;
        max-width: 300px;
        padding: 0.75rem 1.5rem;
        background-color: #fe424d;
        color: #fff;
        border: none;
        border-radius: 25px;
        font-size: 1.1rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        margin: 0 auto;
        display: block;
    }

    .ai-search-btn:hover {
        background-color: #e23b43;
        transform: scale(1.05);
        box-shadow: 0 4px 15px rgba(254, 66, 77, 0.3);
    }

    .ai-search-btn:active {
        background-color: #d63384;
        transform: scale(0.98);
    }

    .examples-section {
        margin-top: 2rem;
        padding: 1.5rem;
        background: #f8f9fa;
        border-radius: 10px;
        border-left: 4px solid #4c5fd7;
    }

    .examples-section h3 {
        color: #4c5fd7;
        margin-bottom: 1rem;
        font-size: 1.3rem;
    }

    .example-queries {
        display: grid;
        gap: 0.5rem;
    }

    .example-query {
        padding: 0.75rem;
        background: white;
        border-radius: 8px;
        border: 1px solid #e1e5e9;
        cursor: pointer;
        transition: all 0.2s ease;
        font-size: 0.9rem;
        color: #555;
    }

    .example-query:hover {
        background: #4c5fd7;
        color: white;
        transform: translateX(5px);
    }

    .features-section {
        margin-top: 2rem;
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 1rem;
    }

    .feature-card {
        padding: 1.5rem;
        background: #f8f9fa;
        border-radius: 10px;
        text-align: center;
        border: 1px solid #e1e5e9;
    }

    .feature-icon {
        font-size: 2rem;
        color: #4c5fd7;
        margin-bottom: 1rem;
    }

    .feature-title {
        font-weight: 600;
        color: #333;
        margin-bottom: 0.5rem;
    }

    .feature-desc {
        color: #666;
        font-size: 0.9rem;
    }

    @media (max-width: 768px) {
        .ai-search-container {
            margin: 1rem;
            padding: 1.5rem;
        }

        .ai-search-header h1 {
            font-size: 2rem;
        }

        .ai-search-header p {
            font-size: 1rem;
        }

        .features-section {
            grid-template-columns: 1fr;
        }
        
        .form-control {
            min-height: 100px;
            padding: 0.75rem;
        }

        .ai-search-btn {
            padding: 0.75rem 1.5rem;
            font-size: 1rem;
            max-width: 100%;
        }
    }
    
    @media (max-width: 480px) {
        .ai-search-container {
            margin: 0.5rem;
            padding: 1rem;
        }
        
        .ai-search-header h1 {
            font-size: 1.75rem;
        }
        
        .ai-search-header p {
            font-size: 0.9rem;
        }
        
        .examples-section {
            padding: 1rem;
        }
        
        .example-query {
            font-size: 0.8rem;
            padding: 0.5rem;
        }
    }
</style>

<div class="ai-search-container">
    <div class="ai-search-header">
        <div class="ai-icon">
            <i class="fas fa-robot"></i>
        </div>
        <h1>TravelBuddy.AI</h1>
        <p>Your personal AI travel companion! Tell us what you're looking for in natural language and let TravelBuddy.AI find the perfect accommodation for you!</p>
    </div>

    <form class="search-form" action="/ai/search" method="POST">
        <div class="form-group">
            <label for="query" class="form-label">Describe your ideal stay:</label>
            <textarea 
                id="query" 
                name="query" 
                class="form-control" 
                placeholder="e.g., I want a 3-day stay near Pune with a private pool, good Wi-Fi, and close to trekking spots under ₹5k/night"
                required
            ></textarea>
        </div>
        <div class="searchdiv">
            <button type="submit" class="ai-search-btn">
                <i class="fas fa-search"></i> Find My Perfect Stay
            </button>
        </div>
        
    </form>

    <div class="examples-section">
        <h3><i class="fas fa-lightbulb"></i> Try these examples:</h3>
        <div class="example-queries">
            <div class="example-query" onclick="setQuery('Family-friendly apartment in Pune with gym, swimming pool, and kitchen facilities under ₹8k/night')">
                "Family-friendly apartment in Pune with gym, swimming pool, and kitchen facilities under ₹8k/night"
            </div>
            <div class="example-query" onclick="setQuery('I need a luxury villa in Sri Lanka with a private beach, spa services, and gourmet kitchen for under ₹15k/night')">
                "I need a luxury villa in Sri Lanka with a private beach, spa services, and gourmet kitchen for under ₹15k/night"
            </div>
            <div class="example-query" onclick="setQuery('Looking for a cozy mountain cabin near Manali with fireplace, wifi, and parking for 2 nights under ₹3k/night')">
                "Looking for a cozy mountain cabin near Manali with fireplace, wifi, and parking for 2 nights under ₹3k/night"
            </div>
            
            <div class="example-query" onclick="setQuery('Budget-friendly stay in Lonavala with wifi and laundry facilities under ₹5k/night')">
                "Budget-friendly stay in Lonavala with wifi and laundry facilities under ₹5k/night"
            </div>
        </div>
    </div>

    <div class="features-section">
        <div class="feature-card">
            <div class="feature-icon">
                <i class="fas fa-brain"></i>
            </div>
            <div class="feature-title">Smart Understanding</div>
            <div class="feature-desc">Our AI understands natural language and converts it to precise search filters</div>
        </div>
        <div class="feature-card">
            <div class="feature-icon">
                <i class="fas fa-filter"></i>
            </div>
            <div class="feature-title">Advanced Filtering</div>
            <div class="feature-desc">Automatically filters by location, amenities, price, and activities</div>
        </div>
        <div class="feature-card">
            <div class="feature-icon">
                <i class="fas fa-shield-alt"></i>
            </div>
            <div class="feature-title">Fallback Search</div>
            <div class="feature-desc">If AI processing fails, we fall back to smart keyword search</div>
        </div>
    </div>
</div>

<script>
    function setQuery(text) {
        document.getElementById('query').value = text;
        document.getElementById('query').focus();
        // Automatically submit the form after setting the query
        document.querySelector('.search-form').submit();
    }
</script>
