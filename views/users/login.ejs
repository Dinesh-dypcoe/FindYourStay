<% layout("/layouts/boilerplate") %>

<style>
    .login-btn{
        border-radius: 0.25rem !important;
    }
</style>

<div class="row mt-5">
    <div class="col-md-6 offset-md-3">
        <div class="card p-4 shadow-lg">
            <form action="/login" method="post" novalidate class="needs-validation">
             <h2 class="text-center mb-4">Login to FindYourStay</h2>
                <div class="mb-3">
                    <label for="username" class="form-label">Username</label>
                    <input 
                        name="username"
                        placeholder="Enter your username or email" 
                        id="username"
                        type="text"
                        class="form-control"
                        required
                    />
                    <div class="invalid-feedback">Please provide a username.</div>
                </div>

                <div class="mb-4">
                    <label for="password" class="form-label">Password</label>
                    <div class="input-group">
                        <input 
                            name="password"
                            placeholder="Enter your password" 
                            id="password"
                            type="password"
                            class="form-control"
                            required
                        />
                        <span class="input-group-text" id="togglePassword" style="cursor: pointer;">
                            <i class="fa-solid fa-eye" id="eyeIcon"></i>
                        </span>
                    </div>
                    <div class="invalid-feedback" id="password-feedback">Please provide a password.</div>
                </div>

                <button type="submit" class="btn btn-primary w-100 mb-3 login-btn">Login</button>

                <a href="/auth/google" class="btn btn-success w-100">
                    <i class="fa-brands fa-google"></i> Login with Google
                </a>
                  
                <p class="mt-3 text-center">Don't have an account? <a href="/signup">Sign up here</a></p>
            </form>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        // Password visibility toggle
        const togglePassword = document.getElementById('togglePassword');
        const passwordInput = document.getElementById('password');
        const eyeIcon = document.getElementById('eyeIcon');

        togglePassword.addEventListener('click', function () {
            // Toggle the type attribute
            const type = passwordInput.getAttribute('type') === 'password' ? 'text' : 'password';
            passwordInput.setAttribute('type', type);

            // Toggle the eye icon
            eyeIcon.classList.toggle('fa-eye');
            eyeIcon.classList.toggle('fa-eye-slash');
        });
    });
</script>

<style>
    .card {
        border-radius: 1rem;
    }

    .form-control:invalid {
        border-color: #dc3545;
        box-shadow: none;
    }

    .form-control:valid {
        border-color: #28a745;
    }

    .invalid-feedback {
        color: #dc3545;
    }

    .form-control:focus:invalid {
        border-color: #dc3545;
    }

    .form-control:focus:valid {
        border-color: #28a745;
    }

    .form-control:focus {
        box-shadow: none;
    }

    .btn-primary {
        border-radius: 1rem;
    }

    .text-center a {
        color: #007bff;
        text-decoration: none;
    }

    .text-center a:hover {
        text-decoration: underline;
    }
</style>
